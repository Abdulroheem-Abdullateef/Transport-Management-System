
@model IEnumerable<TransportManagementSystem.Models.TripDTO>
<div class="container-fluid mt-10">
    @if (Model != null && Model.Any())
    {
        var f = Model.First();

        <div class="container-fluid text-left bg-light">
            <div class="row">
                <div class="col-sm-10 text-left text-primary">
                    <p><h5><i class="fa fa-fw fa-plane"></i>Outbond</h5> @f.TakeOffTime.ToLongDateString()</p>
                    @f.TakeOffPoint <i class="fa fa-fw fa-bus"></i> @f.LandingPoint <p></p>
                </div>

            </div>
            <hr>
        </div>

        <div>
            <table class="table  table-bordered table-striped  table-hover">

                <thead class="table-primary text-white">
                    <tr>
                        <th>Bus Information</th>


                    </tr>
                </thead>
                <tbody class="">
                    @foreach (var trip in Model)
                    {


                        <tr>

                            <td class="text-lg-left text-primary"><h5>@trip.TakeOffPoint <i class="fa fa-fw fa-bus"></i> @trip.LandingPoint <p></p>@trip.TakeOffTime.ToShortTimeString() <i class="fa fa-fw fa-bus"></i> @trip.BusType (@trip.AvailableSeat Seats Available)</h5></td>

                            <td class="text-center text-dark"><h5> &#8358 @trip.Price /person <p></p><a class="btn btn-outline-primary" asp-area="" asp-controller="Trip" asp-action="BookTicket" asp-route-id="@trip.Id">Book now</a></h5></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br>
        <br>
    }
            else
            {
                <p>No Schedule found for the selected route and/or date. Please try again. <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index" >Change Search</a></p>
            }
</div>