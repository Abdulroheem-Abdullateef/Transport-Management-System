<div class="login-register-area pt-75 pb-75">
    <div class="container">
        <div class="login-register-wrap">
            <div class="login-register-title text-center">
                <h1>Schedule Trip</h1>
            </div>
            <div class="login-register-form">
                <form asp-action="BookTicket">
                    <input type="hidden" name="TripId" value="@Context.Request.RouteValues["id"]" />
                    <input type="hidden" name="PassengerId" value="@User.Claims.FirstOrDefault(c => c.Type == "Id").Value" />
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="login-register-input-style input-style">
                                <label>NextOfKin*</label>
                                <input type="text" name="NextOfKin" required>
                            </div>
                            <div class="login-register-input-style input-style">
                                <label>Address*</label>
                                <input type="text" name="Address" required>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="login-register-btn">
                                <button type="submit">Register</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
