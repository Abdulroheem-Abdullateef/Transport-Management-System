@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin";
}
@model IEnumerable<TransportManagementSystem.Models.TripDTO>




<div class="card-header" style="background-color:aliceblue;">
    <div class="card-title">
        <h1 class="text-center">Trips</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TripReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakeOffPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LandingPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakeOffTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => student.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.TripReference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.TakeOffPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.LandingPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.TakeOffTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.BusType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Price)
            </td>

            <td>
                <a asp-action="Update" asp-route-id="@student.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@student.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

